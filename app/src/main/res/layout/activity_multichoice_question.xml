<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="shrikant.com.quizapp.Admin.MultichoiceQuestion">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:title="Add MultiChoice Questions"
        app:titleTextColor="#fff"
        android:id="@+id/toolbar"
        app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="50dp"/>
    <include layout="@layout/progressbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Question"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content" />
<EditText
    android:layout_width="match_parent"
    android:maxLines="4"
    android:hint="Enter Question here.."
    android:id="@+id/question"
    android:gravity="bottom"
    android:layout_height="wrap_content" />
</LinearLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Multi-Choice "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="A )"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Option one"
        android:maxLines="1"
        android:id="@+id/option1"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="B )"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Option two"
        android:maxLines="1"
        android:id="@+id/option2"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="C )"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:hint="Option three"
        android:id="@+id/option3"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="D )"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:hint="Option four"
        android:id="@+id/option4"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Correct Answer"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content" />
           <RadioGroup
               android:layout_width="match_parent"
               android:padding="5dp"
               android:id="@+id/ragiogroup"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <RadioButton
                   android:layout_width="match_parent"
                   android:text="A"
                   android:textColor="@color/hint"
                   android:id="@+id/a"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:layout_width="match_parent"
                   android:text="B"
                   android:textColor="@color/hint"
                   android:id="@+id/b"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:layout_width="match_parent"
                   android:text="C"
                   android:textColor="@color/hint"
                   android:id="@+id/c"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:layout_width="match_parent"
                   android:text="D"
                   android:textColor="@color/hint"
                   android:id="@+id/d"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />


           </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Select Category"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/category1"
                android:layout_height="wrap_content"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/category2"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:background="#288121"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:onClick="submitQuestion"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:id="@+id/submit"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content" />
</LinearLayout>
    </ScrollView>

</LinearLayout>
